{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "npmClient": "npm",
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "allowBranch": ["master", "next", "nightly", "feat/rc-comp"],
      "ignoreChanges": [
        "*.md",
        "*.mdx",
        "**/stories/**",
        "**/demo/**",
        "**/publish-to-tnpm/**"
      ],
      "tagVersionPrefix": ""
    }
  }
}
